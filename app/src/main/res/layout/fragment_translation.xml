<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="deniskuliev.yandextranslator.fragments.translation.TranslationFragment">

    <LinearLayout
        android:id="@+id/language_selection_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/original_text_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="4"
                />

            <ImageButton
                android:id="@+id/swap_translation_languages"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="7"
                android:background="?selectableItemBackground"
                app:srcCompat="@drawable/ic_change_language"/>

            <Spinner
                android:id="@+id/translated_text_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="4"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/translation_text_fields"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/original_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:gravity="start"
            android:hint="@string/input_text"
            android:inputType="textAutoCorrect|text"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/translated_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:clickable="false"
            android:ems="10"
            android:gravity="start"
            android:padding="8dp"
            android:textIsSelectable="true"
            android:textSize="18sp"/>

    </LinearLayout>


</LinearLayout>
